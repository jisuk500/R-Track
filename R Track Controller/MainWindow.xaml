<Window x:Class="R_Track_Controller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:R_Track_Controller"
        mc:Ignorable="d"
       Title="3 R Track Controller" Height="750" Width="1600"
        KeyDown="Window_KeyDown" KeyUp="Window_KeyUp" Closing="Window_Closing"
        MouseDown="Window_MouseDown">
    <Window.Resources>
        <Style x:Key="textblock_font" TargetType="TextBlock" >
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="textbox_font" TargetType="TextBox" >
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="border_forward_key" TargetType="Border">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=forward}" Value="True">
                    <Setter Property="Background" Value="Blue"/>
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="Background" Value="LightGray"/>
        </Style>
        <Style x:Key="border_backward_key" TargetType="Border">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=backward}" Value="True">
                    <Setter Property="Background" Value="Blue"/>
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="Background" Value="LightGray"/>
        </Style>
        <Style x:Key="border_left_key" TargetType="Border">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=left}" Value="True">
                    <Setter Property="Background" Value="Blue"/>
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="Background" Value="LightGray"/>
        </Style>
        <Style x:Key="border_right_key" TargetType="Border">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=right}" Value="True">
                    <Setter Property="Background" Value="Blue"/>
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="Background" Value="LightGray"/>
        </Style>
        <Style x:Key="border_stop_key" TargetType="Border">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Path=stop}" Value="True">
                    <Setter Property="Background" Value="Red"/>
                </DataTrigger>
            </Style.Triggers>
            <Setter Property="Background" Value="LightGray"/>
        </Style>
    </Window.Resources>
    <!--메인 그리드-->
    <Grid Name="Grid_main" Margin="5" Focusable="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--분리선-->
        <Rectangle Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Fill="Gray" Margin="2,0,2,0"/>
        <Rectangle Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Fill="Gray" Margin="2,0,2,0"/>

        <!--연결끊기 버튼-->
        <Button Grid.Row="0" Grid.Column="0" Margin="3" Name="Butt_no_connection" Click="Butt_no_connection_Click">
            <Button.Content>
                <TextBlock Text="연결 끊기" Style="{StaticResource textblock_font}"/>
            </Button.Content>
        </Button>

        <!--탭컨트롤 즉시 적용 모드-->
        <Border Grid.Row="0" Grid.Column="2" Margin="8" CornerRadius="7" Background="LightGray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="모드 즉시 적용" Style="{StaticResource textblock_font}"/>
                <CheckBox IsChecked="False" Name="checkbox_mode_instant_apply">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                    </CheckBox.LayoutTransform>
                </CheckBox>
            </StackPanel>
        </Border>

        <!--check now 버튼-->
        <Button Grid.Row="2" Grid.Column="2" Margin="3" Name="Butt_check_connection" Click="Butt_check_connection_Click">
            <Button.Content>
                <TextBlock Text="Check now" Style="{StaticResource textblock_font}"/>
            </Button.Content>
        </Button>

        <!--포트번호 표시 -->
        <TextBlock Text="포트 번호 : COM " Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"
                   Style="{StaticResource textblock_font}"/>
        <TextBlock Grid.Row="2" Grid.Column="1" Margin="3" HorizontalAlignment="Center" VerticalAlignment="Center" Text="-1"
                 Style="{StaticResource textblock_font}" Name="Textblock_portnum"/>

        <!--시리얼 연결하기 버튼 -->
        <Button Grid.Row="0" Grid.Column="1"  Margin="3" Name="Butt_Do_connect" Click="Butt_Do_connect_Click">
            <Button.Content>
                <TextBlock Text="연결하기" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource textblock_font}"/>
            </Button.Content>
        </Button>

        <!--1~3번 트랙 온오프-->
        <Border Grid.Row="4" Grid.Column="0" Margin="10" CornerRadius="4" Background="LightGray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="1번 RTrack" Style="{StaticResource textblock_font}"/>
                <CheckBox IsChecked="True" Name="checkbox_1_available" Click="Checkbox_1_available_Click">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                    </CheckBox.LayoutTransform>
                </CheckBox>
            </StackPanel>
        </Border>
        <Border Grid.Row="4" Grid.Column="1" Margin="10" CornerRadius="4" Background="LightGray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="2번 RTrack" Style="{StaticResource textblock_font}"/>
                <CheckBox IsChecked="True" Name="checkbox_2_available" Click="Checkbox_2_available_Click">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                    </CheckBox.LayoutTransform>
                </CheckBox>
            </StackPanel>
        </Border>
        <Border Grid.Row="4" Grid.Column="2" Margin="10" CornerRadius="4" Background="LightGray">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="3번 RTrack" Style="{StaticResource textblock_font}"/>
                <CheckBox IsChecked="True" Name="checkbox_3_available" Click="Checkbox_3_available_Click">
                    <CheckBox.LayoutTransform>
                        <ScaleTransform ScaleX="1.5" ScaleY="1.5"/>
                    </CheckBox.LayoutTransform>
                </CheckBox>
            </StackPanel>
        </Border>

        <!--1~3의 컨트롤 그리드 -->
        <Grid Grid.Row="6" Grid.Column="0" Grid.RowSpan="8" Margin="3,0,0,0" Name="Grid_1_controls">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--전진 버튼-->
            <Border Grid.Row="0" Grid.Column="0" Margin="3" CornerRadius="4" Name="Bor_1_F" Style="{StaticResource border_forward_key}">
                <TextBlock Text="↑(W)" VerticalAlignment="Center" HorizontalAlignment="Center"
                   Style="{StaticResource textblock_font}"/>
            </Border>

            <!--좌우, 정지 버튼-->
            <Grid Grid.Row="1" DataContext="{Binding}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Margin="3" CornerRadius="4" Name="Bor_1_L" Style="{StaticResource border_left_key}">
                    <TextBlock Text="←(A)" VerticalAlignment="Center" HorizontalAlignment="Center"
                   Style="{StaticResource textblock_font}"/>
                </Border>
                <Border Grid.Column="1" Margin="3" CornerRadius="4" Name="Bor_1_S" Style="{StaticResource border_stop_key}">
                    <TextBlock Text="1" VerticalAlignment="Center" HorizontalAlignment="Center"
                   Style="{StaticResource textblock_font}"/>
                </Border>
                <Border Grid.Column="2" Margin="3" CornerRadius="4" Name="Bor_1_R" Style="{StaticResource border_right_key}">
                    <TextBlock Text="(D)→" VerticalAlignment="Center" HorizontalAlignment="Center"
                   Style="{StaticResource textblock_font}"/>
                </Border>
            </Grid>

            <!--후진 버튼-->
            <Border Grid.Row="2" Grid.Column="0" Margin="3" CornerRadius="4" Name="Bor_1_B" Style="{StaticResource border_backward_key}">
                <TextBlock Text="↓(S)" VerticalAlignment="Center" HorizontalAlignment="Center"
                   Style="{StaticResource textblock_font}"/>
            </Border>

            <!--속도 슬라이더-->
            <Grid Grid.Row="3" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Margin="3,3,0,3" Text="속도" Style="{StaticResource textblock_font}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Row="0" Grid.Column="1" Margin="0,3,0,3" Name="Butt_1_Vel_slower" Click="Butt_1_Vel_slower_Click">
                    <Button.Content>
                        <TextBlock Text="←" Style="{StaticResource textblock_font}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button.Content>
                </Button>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ElementName=Slider_1_Vel, Path=Value}" Margin="0,3,0,3" Style="{StaticResource textblock_font}" 
                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Row="0" Grid.Column="3" Margin="0,3,3,3" Name="Butt_1_Vel_faster" Click="Butt_1_Vel_faster_Click">
                    <Button.Content>
                        <TextBlock Text="→" Style="{StaticResource textblock_font}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button.Content>
                </Button>
                <Slider Margin="3,0,3,3" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Minimum="0" Maximum="200" Foreground="DarkGray"
                    IsSnapToTickEnabled="True" TickPlacement="BottomRight" TickFrequency="5" Name="Slider_1_Vel" Value="150"/>
            </Grid>

            <!--헤드 포지션 슬라이더-->
            <Grid Grid.Row="4" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Margin="3,3,0,3" Text="헤드" Style="{StaticResource textblock_font}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Row="0" Grid.Column="1" Margin="0,3,0,3" Name="Butt_1_Head_Pos_Minus" Click="Butt_HeadTail_Arrow_Click">
                    <Button.Content>
                        <TextBlock Text="←" Style="{StaticResource textblock_font}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button.Content>
                </Button>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ElementName=Slider_1_Head_Pos, Path=Value}"
                           Margin="0,3,0,3" Style="{StaticResource textblock_font}" 
                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Row="0" Grid.Column="3" Margin="0,3,3,3" Name="Butt_1_Head_Pos_Plus" Click="Butt_HeadTail_Arrow_Click">
                    <Button.Content>
                        <TextBlock Text="→" Style="{StaticResource textblock_font}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button.Content>
                </Button>
                <TextBlock Grid.Column="0" Grid.Row="1" Text="위치" Margin="3,3,0,3"
                           Style="{StaticResource textblock_font}"/>
                <Slider Margin="3,0,3,3" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Minimum="1180" Maximum="2900" Foreground="DarkGray"
                    IsSnapToTickEnabled="True"  TickFrequency="1" Name="Slider_1_Head_Pos" Value="0"/>
                <Button Grid.Row="1" Grid.Column="3" Name="Butt_1_head_pos_apply" Margin="0,0,3,3" Click="Butt_HeadPos_apply_Click">
                    <Button.Content>
                        <TextBlock Text="적용" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource textblock_font}"/>
                    </Button.Content>
                </Button>
            </Grid>

            <!--헤드 전류 슬라이더-->
            <Grid Grid.Row="5" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Margin="3,3,0,3" Text="헤드" Style="{StaticResource textblock_font}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Row="0" Grid.Column="1" Margin="0,3,0,3" Name="Butt_1_Head_Amp_Minus" Click="Butt_HeadTail_Arrow_Click">
                    <Button.Content>
                        <TextBlock Text="←" Style="{StaticResource textblock_font}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button.Content>
                </Button>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ElementName=Slider_1_Head_Amp, Path=Value}" Margin="0,3,0,3" Style="{StaticResource textblock_font}" 
                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Row="0" Grid.Column="3" Margin="0,3,3,3" Name="Butt_1_Head_Amp_Plus" Click="Butt_HeadTail_Arrow_Click">
                    <Button.Content>
                        <TextBlock Text="→" Style="{StaticResource textblock_font}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button.Content>
                </Button>
                <TextBlock Grid.Column="0" Grid.Row="1" Text="전류" Margin="3,3,0,3"
                           Style="{StaticResource textblock_font}"/>
                <Slider Margin="3,0,3,3" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Minimum="0" Maximum="1193" Foreground="DarkGray"
                    IsSnapToTickEnabled="True"  TickFrequency="1" Name="Slider_1_Head_Amp" Value="0"/>
                <Button Grid.Row="1" Grid.Column="3" Name="Butt_1_head_amp_apply" Margin="0,0,3,3" Click="Butt_HeadPos_apply_Click">
                    <Button.Content>
                        <TextBlock Text="적용" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource textblock_font}"/>
                    </Button.Content>
                </Button>
            </Grid>

            <!--테일 포지션 슬라이더-->
            <Grid Grid.Row="6" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Margin="3,3,0,3" Text="테일" Style="{StaticResource textblock_font}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Row="0" Grid.Column="1" Margin="0,3,0,3" Name="Butt_1_Tail_Pos_Minus" Click="Butt_HeadTail_Arrow_Click">
                    <Button.Content>
                        <TextBlock Text="←" Style="{StaticResource textblock_font}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button.Content>
                </Button>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ElementName=Slider_1_Tail_Pos, Path=Value}" Margin="0,3,0,3" Style="{StaticResource textblock_font}" 
                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Row="0" Grid.Column="3" Margin="0,3,3,3" Name="Butt_1_Tail_Pos_Plus" Click="Butt_HeadTail_Arrow_Click">
                    <Button.Content>
                        <TextBlock Text="→" Style="{StaticResource textblock_font}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button.Content>
                </Button>
                <TextBlock Grid.Column="0" Grid.Row="1" Text="위치" Margin="3"
                           Style="{StaticResource textblock_font}"/>
                <Slider Margin="3,0,3,3" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Minimum="1180" Maximum="2900" Foreground="DarkGray"
                    IsSnapToTickEnabled="True"  TickFrequency="1" Name="Slider_1_Tail_Pos" Value="0"/>
                <Button Grid.Row="1" Grid.Column="3" Name="Butt_1_tail_pos_apply" Margin="0,0,3,3" Click="Butt_HeadPos_apply_Click">
                    <Button.Content>
                        <TextBlock Text="적용" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource textblock_font}"/>
                    </Button.Content>
                </Button>
            </Grid>


            <!--테일 슬라이더-->
            <Grid Grid.Row="7" Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Margin="3,3,0,3" Text="테일" Style="{StaticResource textblock_font}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Row="0" Grid.Column="1" Margin="0,3,0,3" Name="Butt_1_Tail_Amp_Minus" Click="Butt_HeadTail_Arrow_Click">
                    <Button.Content>
                        <TextBlock Text="←" Style="{StaticResource textblock_font}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button.Content>
                </Button>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ElementName=Slider_1_Tail_Amp, Path=Value}" Margin="0,3,0,3" Style="{StaticResource textblock_font}" 
                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Row="0" Grid.Column="3" Margin="0,3,3,3" Name="Butt_1_Tail_Amp_Plus" Click="Butt_HeadTail_Arrow_Click">
                    <Button.Content>
                        <TextBlock Text="→" Style="{StaticResource textblock_font}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button.Content>
                </Button>
                <TextBlock Grid.Column="0" Grid.Row="1" Text="전류" Margin="3"
                           Style="{StaticResource textblock_font}"/>
                <Slider Margin="3,0,3,3" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Minimum="0" Maximum="1193" Foreground="DarkGray"
                    IsSnapToTickEnabled="True"  TickFrequency="1" Name="Slider_1_Tail_Amp" Value="0"/>
                <Button Grid.Row="1" Grid.Column="3" Name="Butt_1_tail_amp_apply" Margin="0,0,3,3" Click="Butt_HeadPos_apply_Click">
                    <Button.Content>
                        <TextBlock Text="적용" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource textblock_font}"/>
                    </Button.Content>
                </Button>
            </Grid>


            <!--가림막-->
            <Rectangle Grid.Column="0" Grid.Row="0" Grid.RowSpan="100" Fill="#7FFFFFFF" Visibility="Collapsed" Name="Rect_1_curtain"/>

        </Grid>
        <Grid Grid.Row="6" Grid.Column="1" Grid.RowSpan="8" Margin="3,0,0,0" Name="Grid_2_controls">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--전진 버튼-->
            <Border Grid.Row="0" Grid.Column="1" Margin="3" CornerRadius="4" Name="Bor_2_F" Style="{StaticResource border_forward_key}">
                <TextBlock Text="↑(W)" VerticalAlignment="Center" HorizontalAlignment="Center"
                   Style="{StaticResource textblock_font}"/>
            </Border>

            <!--좌우, 정지 버튼-->
            <Grid Grid.Column="1" Grid.Row="1" DataContext="{Binding}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Margin="3" CornerRadius="4"  Name="Bor_2_L" Style="{StaticResource border_left_key}">
                    <TextBlock Text="←(A)" VerticalAlignment="Center" HorizontalAlignment="Center"
                   Style="{StaticResource textblock_font}"/>
                </Border>
                <Border Grid.Column="1" Margin="3" CornerRadius="4"  Name="Bor_2_S" Style="{StaticResource border_stop_key}">
                    <TextBlock Text="2" VerticalAlignment="Center" HorizontalAlignment="Center"
                   Style="{StaticResource textblock_font}"/>
                </Border>
                <Border Grid.Column="2" Margin="3" CornerRadius="4" Name="Bor_2_R" Style="{StaticResource border_right_key}">
                    <TextBlock Text="(D)→" VerticalAlignment="Center" HorizontalAlignment="Center"
                   Style="{StaticResource textblock_font}"/>
                </Border>
            </Grid>

            <!--후진 버튼-->
            <Border Grid.Row="2" Grid.Column="1" Margin="3" CornerRadius="4" Name="Bor_2_B" Style="{StaticResource border_backward_key}">
                <TextBlock Text="↓(S)" VerticalAlignment="Center" HorizontalAlignment="Center"
                   Style="{StaticResource textblock_font}"/>
            </Border>

            <!--속도 슬라이더-->
            <Grid Grid.Row="3" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Margin="3,3,0,3" Text="속도" Style="{StaticResource textblock_font}"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Row="0" Grid.Column="1" Margin="0,3,0,3" Name="Butt_2_Vel_slower" Click="Butt_2_Vel_slower_Click">
                    <Button.Content>
                        <TextBlock Text="←" Style="{StaticResource textblock_font}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button.Content>
                </Button>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ElementName=Slider_2_Vel, Path=Value}" Margin="0,3,0,3" Style="{StaticResource textblock_font}" 
                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Row="0" Grid.Column="3" Margin="0,3,3,3" Name="Butt_2_Vel_faster" Click="Butt_2_Vel_faster_Click">
                    <Button.Content>
                        <TextBlock Text="→" Style="{StaticResource textblock_font}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Button.Content>
                </Button>
                <Slider Margin="3,0,3,3" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Minimum="0" Maximum="200" Foreground="DarkGray"
                    IsSnapToTickEnabled="True" TickPlacement="BottomRight" TickFrequency="5" Name="Slider_2_Vel" Value="150"/>
            </Grid>

            <!--헤드 포지션 슬라이더-->
            <Grid Grid.Row="4" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Margin="3,3,0,3" Text="헤드" Style="{StaticResource textblock_font}"
